# ===========================================
# Upscale Outhouse - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# ===========================================
# DATABASE (Phase 5)
# ===========================================
# Supabase PostgreSQL connection string
DATABASE_URL="postgresql://..."

# ===========================================
# AUTHENTICATION (Phase 7)
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="https://upscaleouthouse.com"

# ===========================================
# STRIPE PAYMENTS (Phase 6)
# ===========================================
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ===========================================
# GOOGLE MAPS (Phase 5)
# ===========================================
# Client-side key for Places Autocomplete (restricted to your domain)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="..."
# Server-side key for Distance Matrix API
GOOGLE_MAPS_SERVER_API_KEY="..."

# ===========================================
# GOOGLE CALENDAR (Phase 8)
# ===========================================
# Service account email from Google Cloud Console
GOOGLE_CALENDAR_CLIENT_EMAIL="your-service-account@your-project.iam.gserviceaccount.com"
# Service account private key (keep the \n characters for line breaks)
GOOGLE_CALENDAR_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# Calendar ID to create events in (usually looks like an email address)
GOOGLE_CALENDAR_ID="your-calendar-id@group.calendar.google.com"

# ===========================================
# EMAIL SERVICE (Phase 6)
# ===========================================
RESEND_API_KEY="re_..."
# Verified sending address â€” must match a domain verified in Resend
EMAIL_FROM="invoices@upscaleouthouse.com"

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================
NEXT_PUBLIC_BASE_URL="https://upscaleouthouse.com"
BUSINESS_EMAIL="info@upscaleouthouse.com"
OWNER_EMAIL="owner@upscaleouthouse.com"
BUSINESS_PHONE="(559) 555-1234"
BUSINESS_LOCATION_ADDRESS="Fresno, CA 93704"
BUSINESS_LOCATION_LAT="36.7378"
BUSINESS_LOCATION_LNG="-119.7871"
